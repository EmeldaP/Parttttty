<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.codetribe.parttttty.MainActivity"
    android:background="@color/colorPrimaryDark"
    >

    <ImageView
        android:id="@+id/img"
        android:src="@drawable/happy"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="34dp"
        android:text="It's your birthday!"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="#F5F"
        android:textDirection="inherit"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:background="@color/colorAccent"
        android:elegantTextHeight="true"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="Happy birthday,may the Lord bless you with many happy more filled with all you can handle. OGOLE OGOLE"
        android:textAlignment="center"
        android:layout_below="@+id/img"
        android:layout_alignParentStart="true" />


</RelativeLayout>
